<h1> Products List</h1>

<table>
<% @products.each do |product| %>
	<tr>
		<td><%= product.id %></td>
		<td><%= product.name %></td>
		<td><%= product.description %></td>
		<td><%= link_to 'Show', product_path(product) %></td>
		<td><%= link_to 'Edit', edit_product_path(product) %></td>
		<td><%= link_to 'Destroy', product_path(product), method: :delete, data: {confirm: 'Are u sure?'} %></td>

	</tr>
<% end %>
</table>