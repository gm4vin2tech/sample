<%= form_for :product, url: products_path do |f| %>
	<% if @product && @product.errors.any? %>
		<% @product.errors.full_messages.each do |msg| %>
			<h2><%= msg %></h2>
		<% end %>
	<% end %>

	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>